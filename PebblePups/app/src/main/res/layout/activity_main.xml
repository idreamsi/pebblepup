<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:splitMotionEvents="true"
    android:orientation="horizontal"
    android:paddingTop="50dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_move_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_up_white_24dp"
            android:layout_marginBottom="50dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button_move_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_move_up"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:id="@+id/LR" >

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/button_move_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_left_white_24dp"
                android:layout_marginRight="50dp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/button_move_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_right_white_24dp" />
        </LinearLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Show off"
            android:id="@+id/button_show_off"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"
            android:textColor="#ffffffff"
            android:layout_below="@id/LR"
            android:background="@color/accent_material_light"/>

    </RelativeLayout>

</LinearLayout>